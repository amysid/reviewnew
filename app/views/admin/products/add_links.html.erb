     <div id="country-content">
        <%#= render partial: "index"%>
        <div class="clearfix">
        <h3> Product Link List</h3>
        <div class="table-responsive cus-table">
           <table class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Sr_No.</th>
                  <!-- <th>ID</th> -->
                  <th>Title</th>
                  <th>Url</th>
                  <th colspan="3">Actions</th>
                </tr>
              </thead>
              <tbody>
                 <% if @product_links.blank? %>
                      <div class="global-heading user-head">No Record Found. </div>
                   <% else %>
                   <%#binding.pry%>
              <% @product_links.each do |m| %>
                <tr>
                  <td><%= @s_no += 1 %></td>
                  <!-- <td><%#= m.try(:id)%></td> -->
                  <td><%= m.try(:link)%></td>
                  <td><%= m.try(:url)%></td>
                  <td><%#= link_to '<em class="fa fa-edit" aria-hidden="true"></em>'.html_safe, edit_admin_category_path(m),:class=>"btn btn-success", method: :get, title: "Edit" %>
                  <%= link_to '<em class="fa fa-trash" aria-hidden="true"></em>'.html_safe, product_link_delete_admin_product_path(id: m.id),title: "Delete",:data => {:confirm => "Are you sure you want to delete this Link ?"},:class=>"btn btn-danger", method: :delete %></td>
                </tr>
              <% end %>
              <%end%>
              </tbody>
            </table>
            
             <%#= will_paginate @categories,  renderer: BootstrapPagination::Rails %>
              <%#= will_paginate @categories %>
          </div>
        </div>
     </div>
