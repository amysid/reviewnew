<section class="content-header">
  <center>
    <h1><b>Add Categories Details</b></h1>
      <p class="box box-info"></p>
   </center>
</section>
<section class="content">
  <%= form_with(model: @detail, url:  create_category_details_admin_categories_path, method: :post, local: true) do |f| %>
  <div class="row">
     <div class="col-md-3">
     </div>
     <div class="col-md-6">
      <div class="box box">
         <div class="box-body box-profile">

         	<ul class="list-group list-group-unbordered">
               <li class="list-group-item">
                  <b>Category Type</b>
                      <%= f.select("category_type", category, {:include_blank => "category_type"}) %>

                   <b>Sub_Category Type</b>
                      <%= f.select("sub_category_type", sub_category, {:include_blank => "sub_category_type"}) %>
                </li>
            </ul>
          
           <ul class="list-group list-group-unbordered">
               <li class="list-group-item">
                  <b>Title</b>
                      <%= f.text_field :title, class: 'form-control', autofocus: true, placeholder: "title" %>
				</li>
            </ul>
            <ul class="list-group list-group-unbordered">
               <li class="list-group-item">
                  <b>Description</b>
                      <%= f.cktext_area :description, class: 'form-control', autofocus: true, placeholder: "title" %>
				</li>
            </ul>
             <ul class="list-group list-group-unbordered">
               <li class="list-group-item">
                  <b>Image:</b>
                      <%= f.file_field :image, class: 'form-control', autofocus: true, placeholder: "title" %>
				</li>
            </ul>
            
            <div class="form-group has-feedback">
                      <%= f.submit "Submit" , class: "btn btn-success btn-block"%>
                    </div>
          <a href="/admin/users" class="btn btn-danger btn-block"><b>Back</b></a>
        </div>
      </div>
   </div>
  <div class="col-md-3">
  </div>
 </div>
 <%end%>
</section>
