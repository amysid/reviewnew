<section class="content-header">
  <center>
    <h1><b>View User</b></h1>
      <p class="box box-info"></p>
   </center>
</section>
<section class="content">
  <div class="row">
     <div class="col-md-3">
     </div>
     <div class="col-md-6">
   <!-- <h3>User Detail</h3> -->
      <div class="box box">
         <div class="box-body box-profile">
           <center>
              <h2>Profile</h2>
           </center>
           <p class="box box-info"></p>
           <h3 class="profile-username text-center">
               <%#= @user.name.capitalize %>
           </h3>
           <p class="text-muted text-center">
                 <%#= @user.role.capitalize %>
           </p>
           <ul class="list-group list-group-unbordered">
               <li class="list-group-item">
                  <b>Transaction ID</b>
                     <p class="pull-right">
                       <%#= @transaction.id%>
                     </p>
               </li>
               <li class="list-group-item">
                   <b>User Name</b>
                   <p class="pull-right">
                   <%= @users&.name%>
                   </p>
               </li>
               <li class="list-group-item">
                    <b>Method</b>
                     <p class="pull-right">
                       <%#= @transaction.tx_type%>
                     </p>
               </li>
               <li class="list-group-item">
                 <b>Token</b>
                  <p class="pull-right">
                    <%#= @transaction.tokens%>
                  </p>
                </li>
               <li class="list-group-item">
                   <b>Created at</b>
                   <p class="pull-right">
                      <%#= @transaction&.created_at.strftime("%d/%m/%Y")%>
                   </p>
               </li>
            </ul>
          <a href="<%#=admin_transactions_path%>" class="btn btn-danger btn-block"><b>Back</b></a>
        </div>
       <!-- /.box-body -->
      </div>
   </div>
  <div class="col-md-3">
  </div>
 </div>
</section>

                    