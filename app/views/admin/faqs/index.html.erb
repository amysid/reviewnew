<div class="content-wrapper2">
   <!-- Content Header (Page header) -->
   <section class="content-header">
     <h1>Faqs</h1>
   </section>
   <!-- Main content -->
   <section class="content">
    <div class="box box-info">
      <div class="text-right attendee-cent-s form-group">
      	<%= link_to "Add Faqs", new_admin_faq_path, :class => "btn btn-success" %>
      </div>
           <div class="box-body">
           <div class="table-responsive ">
             <table id="example2" class="table table-bordered table-hover ">
               <thead>
                 <tr style="background-color: #D9D7D7;">
                <th>Sr No.</th>
           		  <th>Question</th>
                <th>Answer</th>
           		  <th>Action</th>
           			</tr>
               </thead>
               <% @faqs.each do |faqs| %>
           			<% unless @faqs.eql?(nil) %>
           				<tbody>
           					<tr class="even">
                      <td><%= @s_no += 1 %></td>
           						<td style="max-width: 150px;word-break: break-all;"><%=truncate(strip_tags(faqs&.question), omision: "...", length: 20).html_safe %> </td>
           						<td style="max-width: 150px;word-break: break-all;"><%= truncate(strip_tags(faqs&.answer), omision: "...", length: 20) %> </td>
           						<td class="cell-action-btn">
                         <a href="/admin/faqs/<%= faqs.id%>" class="btn btn-success"><em class="fa fa-eye" aria-hidden="true"></em></a> 
           							<a href="/admin/faqs/<%= faqs.id%>/edit" class="btn btn-primary"><em class="fa fa-edit" aria-hidden="true"></em></a>
           							<a>
           							<%= link_to '<em class="fa fa-trash" aria-hidden="true"></em>'.html_safe,  admin_faq_path(faqs.id), method: :delete,:class=>"btn btn-danger", data: {confirm: 'Are you sure to delete this Faq?' }%></a></td>
           					</tr>
           				</tbody>
           			<%end%>
           		<%end%>
           	</table>
            </div>
             <div class="digg_pagination pull-right">
                    <%= will_paginate @faqs %>
            </div>
           </div>
         </div>
   </section>
 </div>
 <style type="text/css">

  .td{
        border: 1px solid black;
     }
  .th{
            border: 1px solid black;
     }
</style>
