<div class="page-wrapper">
      <div class="faq-page">
        <div class="container">
          <h1 class="page-title">FAQ</h1>
          <%show = "show"%>
          <div class="accordion" id="accordionExample">
            <% @faqs&.each_with_index do |faq,index| %>
            <div class="card">
              <div class="card-header accordion-card" id="headingOne" data-toggle="collapse"
                data-target="#aa<%= faq.id%>" aria-expanded="true" aria-controls="aa<%= faq.id%>"> <%= faq&.question %>
              </div>
              <div id="aa<%= faq.id%>" class="collapse <%= show%>" aria-labelledby="headingOne" data-parent="#accordionExample">
                <div class="card-body">
                  <%= sanitize(faq&.answer)%>
                </div>
              </div>
            </div>
            
           <% show = nil%>
            <%end%>
          </div>
        </div>
      </div>
    </div>
