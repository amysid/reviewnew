<%= render "layouts/web_header" %>


<div class="page-wrapper">
      <div class="login-page">
        <div class="container">
          <div class="row">
            <div class="col-md-12 col-lg-12 col-xl-12">
              <div class="login-box">
                <div class="row no-gutters row-eq-height">
                  <div class="col-md-5 col-xl-5">
                    <div class="login-content-box">
                      <div class="login-text">
                        <h3>Welcome</h3>
                        <h2>to website</h2>
                        <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-7 col-xl-7">
                    <div class="login-form-box">
                       <div class="right-heading">
                      <h2>Login</h2>
                    </div>
                      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <div class="form-group">
                          <!-- <input type="email" class="form-control email" id="l_emil" placeholder="Email"> -->
                          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control email", placeholder: "Email" %>
                        </div>
                        <div class="form-group">
                          <!-- <input type="Password" class="form-control password" id="l_password" placeholder="Password"> -->
                          <%= f.password_field :password, autocomplete: "current-password", class: "form-control password", placeholder: "Password" %>
                        </div>
                        <div class="d-flex align-items-center justify-content-between custom-design">
                          <% if devise_mapping.rememberable? %>
                          <div class="check">
                            <!-- <input type="checkbox" name="Remember me" value="Remember me"> Remember me -->
                              <%= f.check_box :remember_me %>
                              <%= f.label :remember_me %>
                            </div>
                            <%end%>
                          <a><%= link_to "Forgot Password?", new_password_path(resource_name) %></a>
                        </div>
                        <div class="form-group text-center mb-0">
                          <%= f.submit "Login", class: "btn btn-success" %>
                          <!-- <a href="login.html" class="btn btn-success">Login</a> -->
                        </div>
                        <div class="orline">
                          <hr class="horizontal-line"><span>OR</span>
                        </div>
                         <div class="form-group text-center1 mb-0 mt30">
                          <a href="login.html" class="btn btn-success blue"><img src="/assets/facebook.png">continue with facebook</a>
                        </div>
                        <p class="text-center mt20">New a member? <a class="yellow-text"><%= link_to "Sign up", new_registration_path(resource_name) %></a></p>
                      <%end%>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


<%#= render "devise/shared/links" %>
<%= render "layouts/web_footer" %>
