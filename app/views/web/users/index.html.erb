                <% @count_hall_frame = 0 %>
                <% @products&.each do |product |%>
                <% if product.reviews.present? %>
                <% @a=product.reviews.map {|x| x.rating  }.sum %>
                <% @b=product.reviews.map.with_index {|x,index|  }.count %>
                <% if @a > 0 %>
                <% if ((@a*100)/(@b*10)) >=  ((@reviews_all*100)/(10*@reviews_count)) %>
                <%if @count_hall_frame < 6 %>
                <div class="col-md-4">
                    <a href="/web/users/<%=product.id%>/movie_detail" class="custom-post">
                        <div class="custom-img">
                            <img src="<%= product.image.first.file_url%>" class="img-fluid" alt="">
                        </div>
                        <div class="custom-content justify-content-end">
                            <h4 class="custom-title">
                                <%= product&.product_name%>
                            </h4>
                            <p class="mb-2">
                                <%=truncate(strip_tags(product&.description), omision: "...", length: 130).html_safe%>
                            </p>
                            <!-- <a href="#" class="view-more align-self-end">View More</a> -->
                        </div>
                        <div class="prcnt-section">
                            <p>
                                <%=(@a*100)/(@b*10)%>%</p>
                        </div>
                        <%if @count_hall_frame == 5 %>
                        <div class="text-right">
                             <a href="/web/users/holl_of_fame_details" class="readmore btn btn-theme">Read More></a>
                            </div>
                        <%end%>
                        <% @count_hall_frame += 1%>
                    </a>
                </div>
                <%end%>
                <%end%>
                <%end%>
                <%end%>
                <%end%>
