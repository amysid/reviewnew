<%#if current_user.present? %>
<%#= render partial: 'web/users/head'%>
<%#end%>
<%= render partial: 'web/users/trending'%>
<!-- Home Slider Close -->
<div class="page-wrapper">
    <div class="container home-wrap">
        <div class="row">
            <div class="col-md-8">
                <div class="left-side">
                    <h3 class="widget-title mt-0">TRENDING NOW</h3>
                    <div class="posts">
                        <% @count_trending = 0 %>
                        <% @trending_products&.each_with_index do |product, index|%>
                        <%# if product.trending == true %>
                        <% if @count_trending < 4%>
                        <div class="post-item">
                            <div class="row no-gutters align-items-stretch">
                                <%#binding.pry%>
                                <div class="col-md-4">
                                    <div class="post-img">
                                        <a href="/web/users/<%=product.id%>/movie_detail"><img src="<%= product&.image&.take&.file_url%>" alt=""></a>
                                    </div>
                                </div>
                                <div class="col-md-8">
                                    <div class="post-details">
                                        <p class="tag"><span>
                                                <%= product&.category_name%> : </span></p>
                                        <h4 class="post-title">
                                            <%#= product&.product_name%>
                                             <a href="/web/users/<%=product.id%>/movie_detail"><%= product&.product_name%></a> :
                                            <%#= product.sub_category_name%>
                                        </h4>
                                        <p>
                                            <%= truncate(strip_tags(product&.description), omision: "...", length: 130).html_safe%>
                                        </p>
                                        <div class="post-meta">
                                            <span><i class="fa fa-clock-o"></i>
                                                <%= product&.date&.strftime("%B %d, %Y")%></span>
                                            <!-- <a href="JavaScript:Void(0);" class="readmore">Read More></a> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <% if @count_trending == 3 %>
                            <a href="/web/users/trending" class="readmore pull-right btn btn-theme my-3">Read More></a>
                            <%end%>
                        </div>
                        <% @count_trending += 1 %>
                        <%#end%>
                        <%end%>
                        <%end%>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="right-side">
                    <div class="widget">
                        <h3 class="widget-title mt-0">UPCOMING RELEASES</h3>
                        <% @count_upcomeing = 0%>
                        <% @products&.each_with_index do |product, index|%>
                        <%#binding.pry%>
                        <% if product&.date&.present? %>
                        <%if product&.date > DateTime.now.utc %>
                        <% if @count_upcomeing  <=  4 %>
                        <a href="/web/users/<%=product.id%>/movie_detail" class="custom-post">
                            <div class="custom-img">
                                <img src="<%= product&.image&.take&.file_url%>" class="img-fluid game-img" alt="">
                            </div>
                            <div class="custom-content">
                                <h4 class="custom-title">
                                    <%= product&.product_name%>:
                                    <%= product&.category_name%>
                                </h4>
                                <h5>
                                    <%#= product.sub_category_name%>
                                </h5>
                                <p>
                                    <%= truncate(strip_tags(product&.description), omision: "...", length: 130).html_safe%>
                                </p>
                                <p class="custom-date"><i class="fa fa-clock-o"></i>
                                    <%= product&.date&.strftime("%B %d, %Y")%>
                                </p>
                            </div>
                            </a>
                            <% if @count_upcomeing == 4%>
                            <a href="/web/users/upcomeing" class="readmore pull-right btn btn-theme">Read More></a>
                            <%end%>
                            <% @count_upcomeing += 1 %>
                            <%end%>
                            <%end%>
                            <%end%>
                            <%end%>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="left-side">
                    <div class="posts">
                        <div class="custom-post big-post">
                            <% @count_todays_review = 0%>
                            <% @todays_review.each do |review|%>
                            <% if @count_todays_review == 0 %>
                            <a href="/web/users/<%=review&.product_id%>/movie_detail" class="">
                                <img src='<%= review&.product&.image.present? ? review&.product&.image&.last&.file&.url : "/assets/review-img.png" %>'>
                            
                            <div class="custom-content align-center">
                                <p class="custom-tag"><span>
                                        <%=review&.product&.category&.category_name%> : Review</span></p>
                                <h4 class="custom-title">
                                    <%=review&.product&.product_name%> Review</h4>
                                <p>
                                    <%=truncate(review&.comment, :length => 170)%>
                                </p>
                                <p class="custom-date"><i class="fa fa-clock-o"></i>
                                    <%= review&.created_at&.strftime("%B %d, %Y")%>
                                </p>
                            </div>
                            </a>
                            <%  @count_todays_review += 1 %>
                            <%end%>
                            <%end%>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="right-side">
                    <div class="widget reviewe-widget">
                        <% if @todays_review.blank? %>
                                <p></p>
                          <%else%>      
                        <h3 class="widget-title mt-0">Reviewed Today</h3>
                        <% @todays_review.each do |review|%>
                        <%#binding.pry%>
                        <%# if review.created_at == DateTime.now%>
                        <div class="d-flex align-items-start reviewe-widget-item mb-4">
                            <a href="/web/users/<%=review&.product_id%>/movie_detail"><img src='<%= review&.product&.image.present? ? review&.product&.image&.first&.file&.url : "/assets/review-img.png" %>'></a>
                            <div class="reviewe-widget-content">
                                <h6>
                                    <%= review&.product&.category&.category_name%> Reviews |
                                    <%=review&.product&.product_name%> Reviews</h6>
                                <p>
                                    <%=truncate(review&.comment, :length => 70)%>
                                </p>
                                <span><i class="fa fa-clock-o"></i>
                                    <%= review&.created_at&.strftime("%B %d, %Y")%></span>
                            </div>
                        </div>
                        <%#end%>
                        <%end%>
                        <%end%>
                    </div>
                </div>
            </div>
        </div>

          
