                        <div class="custom-content align-center align-items-center">
                            <h4 class="custom-title">
                                <%= category[0]%>
                            </h4>
                        </div>
                    </a>
                </div>
                <% @count_category_reviews +=1  %>
                <%end%>
            </div>
        </div>
