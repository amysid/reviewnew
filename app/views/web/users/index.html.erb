              <a href="/web/users/<%=y.id%>/movie_detail" class="custom-post">
                <div class="custom-img mediam">
                  <img src="<%= y&.image&.last&.file_url%>" class="img-fluid" alt="">
                </div>
                <div class="custom-content-section justify-content-end">
                  <h4 class="title-section"><%= y&.product_name %></h4>
                  <p class="mb-2"><%=truncate(strip_tags(y&.description), omision: "...", length: 140).html_safe %></p>
                  <p class="date"><i class="fa fa-clock-o"></i><%= y&.date&.strftime("%B %d, %Y")%></p>
                </div>
                <div class="percent-section">
                  <p><%=  (y&.avg_rating&.to_f * 10).round(2)%>%</p>
