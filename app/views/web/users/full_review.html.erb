            <div class="score-card">
                <div class="score-card-top" >
                    <div class="rtUserImg">
                        <img src="<%= @a&.image&.file&.present? ? @a&.image&.file.try(:url) : "/assets/user_default.jpeg"%>">
                    </div> 
                        <div class="rtUserInfo">
                            <div class="name-date">
                                <h4>
                                    <%= @a&.name%>
                                </h4>
                                <span>
