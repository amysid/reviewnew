                                <% eval(@review.criteria).map do |key,value| %>
                                <p>
                                    
                                    <%=key%>:
                                    <% if value > 0 %>
                                    <% value.times do %>
                                    <span class="fa fa-star checked"></span>
                                    <% end %>
                                </p>
