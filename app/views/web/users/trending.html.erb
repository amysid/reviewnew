                  <h4><%= product.product_name%>: <%= product.category_name%></h4>
                  <p><%= truncate(strip_tags(product.description), omision: "...", length: 400).html_safe%></p>
                  <p><span></span><%= product&.date&.strftime("%B %d, %Y")%></p>
