<%if current_user.present? %>
<%= render partial: 'web/users/head'%>
<%end%>
<div class="page-wrapper">
  <div class="container home-wrap">
    <div class="row theatres-row trending-row">
      <div class="col-md-12">
        <h2 class="widget-title">All TRENDING NOW</h2>
         <div class="tab-content theatres-content" id="tabScore">
          <div class="tab-pane fade show active" id="nav-movie" role="tabpanel">
            <div class="row">
             <% @trending_products&.each_with_index do |product, index|%>
              <div class="col-md-6">
                <div class="youtube-image2">
                  <img width="560" height="315" src="<%= product.image.take.file_url%>"/>
                </div>
              </div>
              <div class="col-md-6 youtube-content ">
                <figure class="para-Margin-top"> 
                  <h4><%= product&.product_name%>: <%= product&.category_name%></h4>
                  <p><%= truncate(strip_tags(product&.description), omision: "...", length: 400).html_safe%></p>
                  <p><span></span><%= product&.date&.strftime("%B %d, %Y")%></p>
                </figure>
              </div>
             <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
 <div class="box-footer">
        <div class="digg_pagination pull-right">
                <%= will_paginate @trending_products%>
        </div>
 </div>