                <% if product.trending == true %>
              <div class="col-md-6">
                <div class="youtube-image2">
                  <iframe width="560" height="315" src="<%= product.image.take.file_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
              </div>
              <div class="col-md-6 youtube-content ">
